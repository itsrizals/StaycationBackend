<div class="card shadow mb-4">
  <div class="card-header">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-3">
        <img
          src="http://localhost:3000/<%= booking.payments.proofPayment %>"
          alt="Image"
          style="width: 100%; display: block;"
          class="p-3 shadow"
        />
      </div>
      <div class="col-md-9">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
                <% if(booking.payments.status == 'Process') { %>
                <th>Action</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%=booking.memberId.firstName %> <%=booking.memberId.lastName
                  %>
                </td>
                <td>
                 $<%= booking.total %>
                </td>
                <td>
                    <%= booking.payments.bankFrom %>
                </td>
                <td>
                    <%= booking.itemId.title %>
                </td>
                <% if(booking.payments.status == 'Process') { %>
                <td>
                  <div class="row">
                      <form action="/admin/booking/<%= booking.id %>/confirm?_method=put" method="POST">
                        <button type="submit" class="btn btn-success mx-3">
                          <i class="fas fa-check"></i>
                          Confirm
                        </button>
                      </form>
                      <form action="/admin/booking/<%= booking.id %>/reject?_method=put" method="POST">
                        <button type="submit" class="btn btn-danger">
                          <i class="fas fa-times"></i>
                          Reject
                        </button>
                      </form>
                    </div>
                  </td>
                  <% } %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
