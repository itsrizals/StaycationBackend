<%- include('../../partials/header.ejs') %>

<div id="wrapper">
  <%- include('../../partials/sidebar.ejs') %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%- include('../../partials/navbar.ejs') %>

      <div class="container-fluid">
        <%- include('../../partials/message.ejs') %>

        <h1 class="h3 mb-4 text-gray-800 font-weight-bold">Item</h1>

        <% if(action == 'view') { %>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a
              class="nav-link active"
              href="#showItem"
              data-toggle="tab"
              role="tab"
              aria-controls="showItem"
              aria-selected="true"
              >Show Item</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="#addItem"
              data-toggle="tab"
              role="tab"
              aria-controls="addItem"
              aria-selected="true"
              >Add Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('show_table_item.ejs') %> <%- include('add_item.ejs') %>
        </div>
        <% } else if(action == 'show image') { %>
        <div class="tab-content" id="myTabContent">
          <%- include('show_image_item.ejs') %>
        </div>
        <% }else{%>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#edit-item"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Edit Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('edit_item.ejs') %>
        </div>
        <% } %>
      </div>
    </div>

    <%- include('../../partials/footer.ejs') %>
  </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/scripts.ejs') %>

<script>
  CKEDITOR.replace("description");
</script>
