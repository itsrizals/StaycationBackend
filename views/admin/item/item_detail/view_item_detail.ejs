<%- include('../../../partials/header.ejs') %>

<div id="wrapper">
  <%- include('../../../partials/sidebar.ejs') %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%- include('../../../partials/navbar.ejs') %>

      <div class="container-fluid">
        <%- include('../../../partials/message.ejs') %>

        <h1 class="h3 mb-4 text-gray-800 font-weight-bold">Item Detail</h1>

        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a
              class="nav-link active"
              href="#showFeature"
              data-toggle="tab"
              role="tab"
              aria-controls="showFeature"
              aria-selected="true"
              >Show Feature</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="#showActivity"
              data-toggle="tab"
              role="tab"
              aria-controls="showActivity"
              aria-selected="true"
              >Show Activity</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('show_feature.ejs') %> <%- include('show_activity.ejs') %>
        </div>
      </div>
    </div>

    <%- include('../../../partials/footer.ejs') %>
  </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>
<%- include('show_modal_activity.ejs') %>
<%- include('show_modal_feature.ejs') %>
<%- include('../../../partials/scripts.ejs') %>

<script>
  $(document).ready(function () {
    $("#dataTableActivity").DataTable();
  });

  $("#dataTableActivity").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let type = $(this).data("type");
    $("#edit-modal").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".type").val(type);
  });

  $("#dataTable").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let qty = $(this).data("qty");
    $("#edit-modal").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".qty").val(qty);
  });
</script>
