<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#addModal"
    >
      Add Category
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < category.length; i++){ %>
          <tr>
            <td>
              <%= i +1 %>
            </td>
            <td>
              <%= category[i].name %>
            </td>
            <td>
              <form
                action="/admin/category/<%=category[i].id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void(0);"
                  type="button"
                  class="btn btn-success btn-sm mx-1 button-edit"
                  data-id="<%= category[i].id %>"
                  data-name="<%= category[i].name %>"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <button type="submit" class="btn btn-danger btn-sm mx-1">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
